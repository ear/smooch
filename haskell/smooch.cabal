category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

executable smooch
  hs-source-dirs:      exe
  ghc-options:         -Wall
  main-is:             Main.hs
  build-depends:       base,
                       smooch,
                       wai,
                       warp,
                       text,
                       logging
  default-language:    Haskell2010

library
  hs-source-dirs:      src, templates
  ghc-options:         -Wall
  exposed-modules:     Kiss,
                       ParseCNF,
                       Shell,
                       Upload,
                       Web,
                       Process
  build-depends:       base,
                       aeson,
                       array,
                       bytestring,
                       directory,
                       either,
                       filepath,
                       fn,
                       fn-extra,
                       heist,
                       http-types,
                       lens,
                       logging,
                       map-syntax,
                       mtl,
                       parsec,
                       process,
                       resourcet,
                       text,
                       text-icu,
                       wai,
                       wai-extra,
                       wai-middleware-static,
                       warp,
                       xmlhtml
  default-language:    Haskell2010

test-suite tests
  hs-source-dirs:      tests
  ghc-options:         -Wall
  default-language:    Haskell2010
  main-is:             Spec.hs
  other-modules:       ParseCNFSpec,
                       ShellSpec,
                       UploadSpec,
                       ProcessSpec
  type:                exitcode-stdio-1.0
  build-depends:       base,
                       smooch,
                       hspec,
                       aeson,
                       array,
                       bytestring,
                       directory,
                       either,
                       filepath,
                       fn,
                       fn-extra,
                       heist,
                       http-types,
                       lens,
                       logging,
                       map-syntax,
                       mtl,
                       parsec,
                       process,
                       resourcet,
                       text,
                       text-icu,
                       wai,
                       wai-extra,
                       wai-middleware-static,
                       warp,
                       xmlhtml
